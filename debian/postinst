if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if which update-icon-caches >/dev/null 2>&1 ; then
		update-icon-caches /usr/share/icons/Mint-Y-Legacy /usr/share/icons/Mint-Y-Legacy-Aqua /usr/share/icons/Mint-Y-Legacy-Blue /usr/share/icons/Mint-Y-Legacy-Brown /usr/share/icons/Mint-Y-Legacy-Grey /usr/share/icons/Mint-Y-Legacy-Orange /usr/share/icons/Mint-Y-Legacy-Pink /usr/share/icons/Mint-Y-Legacy-Purple /usr/share/icons/Mint-Y-Legacy-Red /usr/share/icons/Mint-Y-Legacy-Sand /usr/share/icons/Mint-Y-Legacy-Teal /usr/share/icons/Mint-Y-Legacy-Yellow
		update-icon-caches /usr/share/icons/Mint-Y-Legacy-Dark /usr/share/icons/Mint-Y-Legacy-Dark-Aqua /usr/share/icons/Mint-Y-Legacy-Dark-Blue /usr/share/icons/Mint-Y-Legacy-Dark-Brown /usr/share/icons/Mint-Y-Legacy-Dark-Grey /usr/share/icons/Mint-Y-Legacy-Dark-Orange /usr/share/icons/Mint-Y-Legacy-Dark-Pink /usr/share/icons/Mint-Y-Legacy-Dark-Purple /usr/share/icons/Mint-Y-Legacy-Dark-Red /usr/share/icons/Mint-Y-Legacy-Dark-Sand /usr/share/icons/Mint-Y-Legacy-Dark-Teal /usr/share/icons/Mint-Y-Legacy-Dark-Yellow
	fi
fi
